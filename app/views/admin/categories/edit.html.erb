<div class="row">
	<div class="offset-md-3 col-md-6">
		<h1 class="title">Edit category</h1>

		<%= form_for [:admin, @category], method: :patch do |f| %>

			<div class="my-5">
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :description %>
					<%= f.text_area :description, class: "form-control" %>
				</div>

				<div class="mt-4">
					<%= f.submit "Save changes", class: "btn btn-info form-control" %>
				</div>
			</div>

		<% end %>
	</div>
</div>