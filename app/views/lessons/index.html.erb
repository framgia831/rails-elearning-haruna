<div class="row">
	<div class="offset-md-2 col-md-8">
		<h1 class="title">Lessons</h1>

		<div class="row index">

			<% @categories.each do |category| %>
				<div class="col-md-6 mb-3 px-2">
					<div class="category_each p-3">
						<div class="category_title">
							<%= category.title %>
						</div>
							<%= category.description %>
						<div class="category_btn">							
							<%# if %>
								<%= link_to "Start lesson", lesson_path(category), class: "btn btn-info" %>
							<%# else %>
								<%#= link_to "Check result", "#", class: "btn btn-outline-info" %>
							<%# end %>
						</div>
					</div>
				</div>
			<% end %>
			
			<%= link_to "Back", "#", class: "index_list" %>
		</div>
	</div>
</div>