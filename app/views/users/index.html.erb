<div class="row">
	<div class="offset-md-3 col-md-6">
		<h1 class="title">Users</h1>
	


		<div class="row index">
			<% @users.each do |user| %>
				<div class="col-md-6 index_each">
					
					<% if user.image_name? %>
						<%= image_tag user.image_name.url, class: "index_image" %>
					<% else %>
						<%= image_tag "user_images/default_user.png", class: "index_image" %>
					<% end %>
					
					<%= link_to user.name, user_url(user), class: "index_list" %>
				</div>
			<% end %>
		</div>
	</div>
</div>